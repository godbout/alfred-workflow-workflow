{
    "name": "godbout/alfred-workflow-workflow",
    "description": "Takes care of all the Alfred glue for you so that you need to code only what is specific to your Workflow.",
    "keywords": [
        "alfred",
        "workflow",
        "alfred-workflow",
        "template",
        "php"
    ],
    "homepage": "https://github.com/godbout/alfred-workflow-workflow",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Guillaume Leclerc",
            "email": "guill@sleeplessmind.com.mo",
            "role": "main craftsman"
        }
    ],
    "require": {
        "php": "^7.2",
        "godbout/alfred-workflow-scriptfilter": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "codedungeon/phpunit-result-printer": "^0.27.0"
    },
    "autoload": {
        "psr-4": {
            "Godbout\\Alfred\\Workflow\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --colors=always",
        "test-coverage": "vendor/bin/phpunit --colors=always --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    }
}
